<div>
  <h1>Your Applications</h1>
</div>

<p><%= link_to 'New Application', new_oauth_application_path, class: 'button' %></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Callback URL</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @applications.each do |application| %>
    <tr id="application_<%= application.id %>">
      <td><%= link_to application.name, [:oauth, application] %></td>
      <td><%= application.redirect_uri %></td>
      <td><%= link_to 'Edit', edit_oauth_application_path(application), class: 'button' %></td>
      <td><%= delete_button('Destroy', [:oauth, application]) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
